# API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Override default settings
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200
# RETRIEVAL_TOP_K=4
# LLM_MODEL=claude-sonnet-4-20250514

# Phase 2 Feature Flags (Optional - defaults shown)
ENABLE_QUERY_REWRITING=true
ENABLE_MULTI_QUERY=true
ENABLE_RERANKING=true
ENABLE_REACT_AGENT=false
ENABLE_SELF_CRITIQUE=true

# Phase 2 Configuration (Optional - defaults shown)
REACT_MAX_ITERATIONS=5
MULTI_QUERY_COUNT=3
RERANK_TOP_K=5

# Phase 3: MCP (Model Context Protocol) - Anthropic SDK
ENABLE_MCP=true
MCP_TIMEOUT=30

# MCP Server Configurations
# Filesystem MCP Server
MCP_FILESYSTEM_ENABLED=true
# Use absolute path, e.g., /Users/yourname/projects/rag-system/data/filesystem
MCP_FILESYSTEM_ROOT=/absolute/path/to/your/data/filesystem

# SQLite MCP Server
MCP_SQLITE_ENABLED=true
# Use absolute path, e.g., /Users/yourname/projects/rag-system/data/app.db
MCP_SQLITE_DB_PATH=/absolute/path/to/your/data/app.db

# Google Drive MCP Server (optional, requires credentials)
MCP_GDRIVE_ENABLED=false
MCP_GDRIVE_CREDENTIALS_PATH=./credentials/google_credentials.json

# Optional: LangSmith Tracing (for monitoring in Phase 5)
# ENABLE_TRACING=false
# LANGCHAIN_API_KEY=your_langsmith_key_here
# LANGCHAIN_PROJECT=rag-system
